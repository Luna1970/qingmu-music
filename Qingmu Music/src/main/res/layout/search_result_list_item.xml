<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clickable="true"
    android:background="@drawable/view_pressed_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingStart="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/click_area_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/song_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/song_album_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/menu_view"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/card_view_menu_selector"
            android:background="@drawable/view_pressed_selector"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22999999"/>
</LinearLayout>